<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inde_cardview"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/inde_name"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="독립운동가 성함 : "
                android:textColor="#2d2d2d"/>

            <TextView
                android:id="@+id/inde_name_put"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="이름"
                android:textColor="#2d2d2d"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
            android:id="@+id/inde_picture"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#2d2d2d"/>

            <ImageView
                android:id="@+id/inde_picture2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="#2d2d2d"/>

            <ImageView
                android:id="@+id/inde_picture3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="#2d2d2d"/>
        </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/inde_history"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="과업 : "
            android:textColor="#2d2d2d" />

        <TextView
            android:id="@+id/inde_history_put"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="10dp"
            android:text="광복을 위한 일, 나라를 위한 일을 하는 분들의 일들을 기록하는 곳"
            android:textColor="#2d2d2d"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>