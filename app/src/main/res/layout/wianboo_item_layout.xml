<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wianboovictim_cardview"
    android:layout_width="185dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <TextView
                android:id="@+id/wianboo_name_put"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="김말복 할머니"
                android:textColor="#2d2d2d"/>


        <ImageView
            android:id="@+id/wianboovictim_picture"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:paddingTop="0dp"
            android:src="@drawable/wianboo_girl_main_new"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <TextView
            android:id="@+id/wianboo_history"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="피해 기간 : "
            android:paddingLeft="10dp"
            android:textColor="#2d2d2d"/>

            <TextView
                android:id="@+id/wianboovictim_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="1925 ~ 1927"
                android:textColor="#000"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>