<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/inner_constraint"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="#fff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/map_inde_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/map_inde_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기념관 혹은 역사관 이름"
            android:textColor="#000"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/map_inde_image"/>

        <TextView
            android:id="@+id/map_inde_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거리"
            android:layout_marginLeft="170dp"
            android:layout_toRightOf="@id/map_inde_image"
            android:layout_above="@+id/view"
            />

        <TextView
            android:id="@+id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" km"
            android:layout_toRightOf="@+id/map_inde_distance"
            android:layout_above="@+id/view"/>

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/map_inde_name"
            android:layout_toRightOf="@id/map_inde_image"/>

        <TextView
            android:id="@+id/map_inde_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기념관 혹은 역사관 위치"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/view"
            android:layout_toRightOf="@id/map_inde_image" />

        <ImageView
            android:id="@+id/map_inde_location_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_pin_drop"
            android:layout_marginLeft="130dp"
            android:layout_below="@id/view"
            />

        <Button
            android:id="@+id/map_inde_btn_homepage"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@id/map_inde_location"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/map_inde_image"
            android:background="#FFffffff"
            android:text="홈페이지" />

    </RelativeLayout>

</RelativeLayout>