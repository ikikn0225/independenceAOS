<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mystory_reply_user_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/inde_main"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mystory_reply_user_name"
        android:layout_width="59dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:text="작성자 이름"
        android:textColor="#000"
        android:textSize="12dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/mystory_reply_user_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/mystory_reply_user_text"
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="작성 글"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@id/mystory_reply_user_name"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>