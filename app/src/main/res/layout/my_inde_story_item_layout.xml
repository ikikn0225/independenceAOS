<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mystory_user_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/inde_main"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mystroy_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="5dp"
            android:text="작성자 이름"
            android:textSize="14dp"
            android:textColor="#000"
            app:layout_constraintLeft_toRightOf="@id/mystory_user_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mystory_user_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:text="작성 날짜"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@id/mystory_user_image"
            app:layout_constraintTop_toBottomOf="@id/mystroy_user_name" />

        <ProgressBar
            android:id="@+id/progressbar_inde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/mystory_main_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mystory_user_image" />

        <ImageView
            android:id="@+id/mystory_more_vert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/mystory_main_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/wianboo_girl_main"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mystory_user_image" />

        <TextView
            android:id="@+id/mystroy_user_name2"
            android:layout_width="59dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="작성자 이름"
            android:textColor="#000"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mystory_main_image" />

        <TextView
            android:id="@+id/mystory_user_text"
            android:layout_width="250dp"
            android:layout_height="37dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="9dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="작성 글"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/mystroy_user_name2"
            app:layout_constraintTop_toBottomOf="@id/mystory_main_image" />

        <TextView
            android:id="@+id/reply_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="#fff"
            android:text="댓글 작성"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/mystory_main_image" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c9c9c9"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>